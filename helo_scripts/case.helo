
data Tree['a] = Branch Tree['a], Tree['a]
              | Leaf 'a


fn fold f, init, xs =
    case xs of Con y, ys -> fold f, (f y, init), ys
             | Nil       -> init
    end

fn left_most 'a tree : [Tree['a]] -> 'a =
    case tree of Branch left,_ -> left_most left
               | Leaf x        -> x
    end

fn sum xs = fold (+), 0, xs

routine main =
    let list = Con 1 (Con 2 (Con 3 Nil)) in
    println sum list

